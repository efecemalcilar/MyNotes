
@using MyNotes.EntityLayer
<!DOCTYPE html>
<html >  
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>My Notes - Blogumsu bir site</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/Content/styles.css" rel="stylesheet" />
    @*Font Awesome*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>

@{
    MyNotesUser user = null;
    if (Session["Login"] != null)
    {
        user=Session["Login"] as MyNotesUser;
    }
}

<!-- Navigation-->
    @Html.Partial("_PartialNav")

              
    <!-- Header-->
    <header class="bg-dark py-3">
        <div class="container px-4 px-lg-5 my-3">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">MyNotes in style</h1>
                <p class="lead fw-normal text-white-50 mb-0">Baba fleur de famille sadece aile !</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    @*.container-fluid.body-content>.row>.col-md-2#category2+.col-md-10#category3*@

<div class="container-fluid body-content">
    <div class="row">
        <div id="category2" class="col-md-3">
            @*#category1>p.lead.mt-5>span.fw-bolder{Kategoriler}^.list-group>a.list-group-item-action.active>span>i.fas.fa-angle-double-right*@

            @Html.Partial("_PartialCategories")
        </div>
        <div id="category3" class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>
    
    <!-- Footer-->
    @Html.Partial("_PartialFooter")
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/Scripts/scripts.js"></script>
</body>
</html>
