@using MyNotes.BusinessLayer

@{
    CommandMaanager cm = new CommandMaanager();
    var list = cm.List();


}

@foreach (var item in list)
{
    @*.d-flex.border.border-danger.mb-1>.flex-sharink-0.mt3>i.bi.bi-chat-left-dots-fill.text-danger.ms-3*@

    <div class="d-flex border border-danger mb-1">
        <div class="flex-shrink-0 mt-3">
            <i class="bi bi-chat-left-dots-fill text-danger ms-3"></i>
        </div>
        <div class="flex-grow-1 row ms-3">

            @*span.col-md-9.fs-6#comment_text_@item.Id*@

            <span id="comment_text_@item.Id" class="col-md-9 fs-6" contenteditable="false">
                @item.Text
            </span>
            <span class="cold-md-3">

                @*button.btn.btn-warning.btn-sm.mt-2*@

                <button class="btn btn-warning btn-sm mt-2"></button>

                <!--Buraya sonra ekleme yapmayı unutma-->

            </span>
            <small class="col-md-12">
                <span class="bi bi-clock"></span>@item.ModifiedOn &nbsp;&nbsp; <!--nbsp Boşluk atıyor-->
                <span class="bi bi-user"></span>@item.Owner.UserName <!--Bilgileri UserName den alacak-->
            </small>
        </div>

    </div>
}

